<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://ofbiz.apache.org/dtds/services.xsd">
    <description>ColibriLegacy Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="legacy-syncAllProducts" engine="java" auth="true" require-new-transaction="true" transaction-timeout="300"
            location="ro.colibri.legacy.session.BusinessDelegate" invoke="syncAllProducts">
        <description>Synchronizes all ACTIVE products(no images) from the legacy database to the Ofbiz database. No stock, just initial data</description>
    </service>
    
    <service name="legacy-syncStock" engine="java" auth="true" require-new-transaction="true" transaction-timeout="600"
            location="ro.colibri.legacy.session.BusinessDelegate" invoke="syncStock">
        <description>Synchronizes product stock(inventory) from the legacy database</description>
    </service>
    
    <service name="legacy-syncPartners" engine="java" auth="true"
            location="ro.colibri.legacy.session.BusinessDelegate" invoke="syncPartners">
        <description>Synchronizes partners from the legacy database</description>
    </service>
    
</services>